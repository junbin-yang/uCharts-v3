<view class="container">
  <!-- 折线图演示 -->
  <view class="demo-section">
    <view class="section-title">折线图</view>
    <view class="chart-container">
      <ucharts-v3 
        type="line" 
        canvas2d="{{true}}" 
        chartData="{{lineChartData}}" 
        bindcomplete="complete"
      />
    </view>
  </view>

  <view class="demo-section">
    <view class="section-title">柱状图</view>
    <view class="chart-container">
      <ucharts-v3 
        type="column" 
        canvas2d="{{true}}" 
        onzoom="{{true}}" 
        ontouch="{{true}}"
        opts="{{opts}}" 
        chartData="{{columnChartData}}" 
        bindcomplete="complete"
      />
    </view>
  </view>

</view>