/* 现代化Loading组件样式 */
.modern-loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.modern-loading--visible {
  opacity: 1;
  visibility: visible;
}

/* 遮罩层 */
.modern-loading__mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.modern-loading__mask--visible {
  opacity: 1;
}

/* 加载容器 */
.modern-loading__container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.modern-loading--visible .modern-loading__container {
  transform: scale(1);
}

/* 尺寸变体 */
.loading-small {
  padding: 24rpx;
}

.loading-medium {
  padding: 40rpx;
}

.loading-large {
  padding: 56rpx;
}

/* 旋转加载器 */
.modern-loading__spinner {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 24rpx;
}

.spinner-ring {
  width: 100%;
  height: 100%;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0052D9;
  border-radius: 50%;
}

.loading-small .modern-loading__spinner {
  width: 40rpx;
  height: 40rpx;
}

.loading-large .modern-loading__spinner {
  width: 80rpx;
  height: 80rpx;
}

/* 进度条加载器 */
.modern-loading__progress {
  width: 200rpx;
  margin-bottom: 24rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #f3f3f3;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #0052D9;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 12rpx;
}

/* 骨架屏加载器 */
.modern-loading__skeleton {
  width: 300rpx;
  margin-bottom: 24rpx;
}

.skeleton-line {
  height: 24rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  border-radius: 4rpx;
  margin-bottom: 16rpx;
  animation: skeleton-loading 2s infinite;
}

.skeleton-line--title {
  height: 32rpx;
  width: 60%;
}

.skeleton-line--content {
  width: 100%;
}

.skeleton-line--short {
  width: 40%;
  margin-bottom: 0;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 脉冲加载器 */
.modern-loading__pulse {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 24rpx;
}

.pulse-circle {
  width: 100%;
  height: 100%;
  background-color: #0052D9;
  border-radius: 50%;
}

.loading-small .modern-loading__pulse {
  width: 40rpx;
  height: 40rpx;
}

.loading-large .modern-loading__pulse {
  width: 80rpx;
  height: 80rpx;
}

/* 点动画加载器 */
.modern-loading__dots {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #0052D9;
  border-radius: 50%;
  animation: dot-bounce 1.2s infinite ease-in-out;
}

.dot1 {
  animation-delay: -0.32s;
}

.dot2 {
  animation-delay: -0.16s;
}

.dot3 {
  animation-delay: 0s;
}

@keyframes dot-bounce {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1.2);
    opacity: 1;
  }
}

.loading-small .dot {
  width: 8rpx;
  height: 8rpx;
}

.loading-large .dot {
  width: 16rpx;
  height: 16rpx;
}

/* 加载文案 */
.modern-loading__text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1.4;
}

.loading-small .modern-loading__text {
  font-size: 24rpx;
}

.loading-large .modern-loading__text {
  font-size: 32rpx;
}

/* 图表专用加载状态 */
.loading-chart {
  background-color: transparent;
  box-shadow: none;
  padding: 0;
}

.loading-chart .modern-loading__container {
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(4px);
}

/* 主题变体 */
.modern-loading--dark {
  background-color: rgba(0, 0, 0, 0.8);
}

.modern-loading--dark .modern-loading__container {
  background-color: #1a1a1a;
  color: #fff;
}

.modern-loading--dark .modern-loading__text {
  color: #ccc;
}

.modern-loading--dark .progress-bar {
  background-color: #333;
}

.modern-loading--dark .skeleton-line {
  background: linear-gradient(90deg, #2a2a2a 25%, #3a3a3a 50%, #2a2a2a 75%);
  background-size: 200% 100%;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .modern-loading__container {
    max-width: 80%;
  }
  
  .modern-loading__skeleton {
    width: 250rpx;
  }
  
  .modern-loading__progress {
    width: 160rpx;
  }
}