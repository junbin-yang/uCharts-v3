{
  "name": "ucharts",
  "version": "1.0.0",
  "description": "一款基于TypeScript的高性能跨平台数据可视化图表库，支持H5、小程序、鸿蒙等不同设备平台。",
  "main": "adapters/dist/h5/ucharts-v3.min.js",
  "module": "adapters/dist/h5/ucharts-v3.esm.js",
  "types": "adapters/dist/h5/types/index.d.ts",
  "exports": {
    "./h5": {
      "import": "./adapters/dist/h5/ucharts-v3.esm.js",
      "require": "./adapters/dist/h5/ucharts-v3.min.js",
      "types": "./adapters/dist/h5/types/index.d.ts"
    },
    "./wechat": {
      "import": "./adapters/dist/wechat/wx-ucharts-v3.esm.js",
      "require": "./adapters/dist/wechat/wx-ucharts-v3.js",
      "types": "./adapters/dist/wechat/types/index.d.ts"
    },
    "./uniapp": {
      "import": "./adapters/dist/uniapp/uni-ucharts-v3.esm.js",
      "require": "./adapters/dist/uniapp/uni-ucharts-v3.js",
      "types": "./adapters/dist/uniapp/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "node adapters/build.js",
    "build:h5": "node adapters/build.js build h5",
    "build:wechat": "cd adapters/platform/wechat && npm run build",
    "build:uniapp": "node adapters/build.js build uniapp",
    "dev": "node adapters/build.js build h5 --watch",
    "dev:wechat": "cd adapters/platform/wechat && npm run build -- --watch",
    "clean": "node adapters/build.js clean",
    "clean:wechat": "cd adapters/platform/wechat && npm run clean",
    "prepublishOnly": "npm run clean && npm run build && npm run build:wechat"
  },
  "devDependencies": {
    "typescript": "5.0.0"
  },
  "keywords": ["chart", "multi-platform", "typescript"],
  "author": "junbin.yang",
  "license": "Apache License 2.0"
}