/* uCharts 组件样式 */
.ucharts-container {
  position: relative;
}

.ucharts-canvas {
  display: block;
}

.ucharts-loading {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.ucharts-error {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.ucharts-error:hover {
  background: rgba(255, 255, 255, 1) !important;
}